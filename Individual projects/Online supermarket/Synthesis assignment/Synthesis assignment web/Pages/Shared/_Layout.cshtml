@using Logic
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Online_supermarketWeb </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Online_supermarketWeb.styles.css" asp-append-version="true" />
</head>
<header>
	<nav class="navbar">
		<a asp-page="/Index">Home</a>
		<a asp-page="/ProductOverview">See all products</a>
		<a asp-page="/CategoryOverview">See all categories</a>
		<a asp-page="/Cart">My cart</a>
		<a asp-page="/Profile">My profile</a>
		<a asp-page="/Login">Log in</a>
	</nav>
</header>
<body>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="pageFooter">
		&copy; 2022 - RobertHeijn - <a class="textColor" asp-area="" asp-page="/About">About this website</a>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>